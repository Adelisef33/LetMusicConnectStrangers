@{
    ViewData["Title"] = "Home Page";
}

<style>
    .hero-header {
        background: linear-gradient(135deg, #1DB954 0%, #191414 100%);
        border-radius: 24px;
        padding: 4rem 2.5rem;
        margin-bottom: 2rem;
        color: white;
        text-align: center;
    }
    
    .hero-header h1 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }
    
    .hero-header p {
        font-size: 1.25rem;
        opacity: 0.9;
    }
    
    .feature-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(0,0,0,0.12);
        padding: 2rem;
        margin-bottom: 2rem;
        border: 1px solid #e0e0e0;
        transition: all 0.3s ease;
    }
    
    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 40px rgba(0,0,0,0.18);
    }
    
    .feature-icon {
        font-size: 3rem;
        color: #1DB954;
        margin-bottom: 1rem;
    }
    
    .btn-spotify {
        background: #1DB954;
        color: white;
        border: none;
        border-radius: 50px;
        padding: 14px 32px;
        font-weight: 700;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(29, 185, 84, 0.3);
        text-decoration: none;
        display: inline-block;
    }
    
    .btn-spotify:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(29, 185, 84, 0.4);
        background: #169c46;
        color: white;
    }
</style>

<div class="hero-header">
    <h1><i class="bi bi-music-note-beamed me-3"></i>Welcome to LetMusicConnectStrangers</h1>
    <p>Discover, share, and review music with a community of music lovers</p>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="feature-card text-center">
            <div class="feature-icon">
                <i class="bi bi-spotify"></i>
            </div>
            <h3>Connect with Spotify</h3>
            <p>Link your Spotify account to discover and share your favorite tracks</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="feature-card text-center">
            <div class="feature-icon">
                <i class="bi bi-star-fill"></i>
            </div>
            <h3>Review Songs</h3>
            <p>Share your thoughts and rate the music you love (or don't love)</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="feature-card text-center">
            <div class="feature-icon">
                <i class="bi bi-people-fill"></i>
            </div>
            <h3>Connect with Others</h3>
            <p>Meet people who share your taste in music and discover new sounds</p>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="btn-spotify">
        Get Started <i class="bi bi-arrow-right ms-2"></i>
    </a>
</div>
