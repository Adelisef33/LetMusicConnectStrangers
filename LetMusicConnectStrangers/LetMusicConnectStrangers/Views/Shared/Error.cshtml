@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<style>
    .error-header {
        background: linear-gradient(135deg, #dc3545 0%, #8b0000 100%);
        border-radius: 24px;
        padding: 2.5rem;
        margin-bottom: 2rem;
        color: white;
        text-align: center;
    }
    
    .error-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(0,0,0,0.12);
        padding: 2.5rem;
        border: 1px solid #e0e0e0;
        margin-bottom: 2rem;
    }
    
    .error-icon {
        font-size: 4rem;
        color: #dc3545;
        margin-bottom: 1rem;
    }
    
    .request-id-box {
        background: #f8f9fa;
        border-left: 4px solid #dc3545;
        border-radius: 8px;
        padding: 1rem;
        margin: 1.5rem 0;
    }
    
    .dev-mode-warning {
        background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
        border: 2px solid #ffc107;
        border-radius: 16px;
        padding: 1.5rem;
        margin-top: 2rem;
    }
    
    .dev-mode-warning h3 {
        color: #856404;
        margin-bottom: 1rem;
    }
    
    .btn-home {
        background: #1DB954;
        color: white;
        border: none;
        border-radius: 50px;
        padding: 14px 32px;
        font-weight: 700;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(29, 185, 84, 0.3);
        text-decoration: none;
        display: inline-block;
        margin-top: 1.5rem;
    }
    
    .btn-home:hover {
        background: #169c46;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(29, 185, 84, 0.4);
    }
</style>

<div class="error-header">
    <div class="error-icon">
        <i class="bi bi-exclamation-triangle"></i>
    </div>
    <h1 class="mb-0">Oops! Something went wrong</h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="error-card text-center">
            <h2 class="text-danger mb-3">An error occurred while processing your request.</h2>
            <p class="text-muted">We apologize for the inconvenience. Please try again or return to the home page.</p>

            @if (Model.ShowRequestId)
            {
                <div class="request-id-box text-start">
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </div>
            }

            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn-home">
                <i class="bi bi-house me-2"></i>Return to Home
            </a>
        </div>

        <div class="dev-mode-warning">
            <h3><i class="bi bi-code-slash me-2"></i>Development Mode</h3>
            <p class="mb-2">
                Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.
            </p>
            <p class="mb-0">
                <strong>The Development environment shouldn't be enabled for deployed applications.</strong>
                It can result in displaying sensitive information from exceptions to end users.
                For local debugging, enable the <strong>Development</strong> environment by setting the <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>Development</strong>
                and restarting the app.
            </p>
        </div>
    </div>
</div>
